@model Todo
@{
    ViewData["Title"] = "Editar Tarefa";
}

<div class="text-center">
    <h1 class="display-4">Editar Tarefa</h1>
</div>

<form asp-controller="Todo" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id"/>

    <div class="form-group">
        <label for="title">Titulo</label>
        <input type="text" asp-for="Title" class="form-control" placeholder="Digite o titulo da tarefa">
        @Html.ValidationMessageFor(todo => todo.Title)
    </div>

    <div class="form-group">
        <label for="dateOfConclusion">Data de Conclusão</label>
        <input type="date" asp-for="DateOfConclusion" class="form-control" placeholder="Digite a data de conclusão">
        @Html.ValidationMessageFor(todo => todo.DateOfConclusion)
    </div>
    
    <br/>
    <button type="submit" class="btn btn-primary w-100" asp-controller="Todo" asp-action="Edit">Salvar Alterações</button>
    <a class="btn btn-secondary w-100" asp-controller="Todo" asp-action="Index" role="button">Voltar</a>
</form>